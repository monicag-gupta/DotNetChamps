(no filteration/where clause required) : 3 Emps from IT, 3 from HR, 4 from sales dept
Create groups of Dept and display the emps in each group








using System;
using System.Collections.Generic;
using System.Linq;

interface IndraVerma
{
    void chotaBheem(); //SAM: Single Abstract Method
}
class Kirmada : IndraVerma
{
    public void chotaBheem()
    {
        Console.WriteLine("Kalaripayetu");
    }
}

class Program
{
    static void Main()
    {
        IndraVerma indra = new Kirmada();
        indra.chotaBheem();

        
    }
}






using System;
using System.Collections.Generic;
using System.Linq;

interface IndraVerma
{
    void chotaBheem(); //SAM: Single Abstract Method
}

delegate void IndraVerma1();  //Class called Indraverma1 with no param SAM returning void

class Kirmada : IndraVerma
{
    public void chotaBheem()
    {
        Console.WriteLine("Kalaripayetu");
    }
}

class Kirmada2
{
    public void chotaBheem()
    {
        Console.WriteLine("Kalaripayetu");
    }

}
class Calc
{
    public static int add(int x, int y)
    {
        return x + y;
    }
    public static int sub(int x, int y)
    {
        return x - y;
    }
    public static int mul(int x, int y)
    {
        return x + y;
    }
}

class Program
{
    delegate int op(int x, int y);
    static int operation(int x, int y, op o) 
    {
        return o(x, y);
    }


    static void Main()
    {
        IndraVerma indra = new Kirmada();
        indra.chotaBheem();
        Kirmada2 kirmada2 = new Kirmada2();
        IndraVerma1 indra2 = new IndraVerma1(kirmada2.chotaBheem);
        indra2();
        int res = operation(9,6, new op(Calc.add) );
        Console.WriteLine(res);
    }
}







using System;
using System.Collections.Generic;
using System.Linq;


delegate void IndraVerma();  //Class called Indraverma1 with no param SAM returning void
class Program
{
    delegate int op(int x, int y);
    static int operation(int x, int y, op o) 
    {
        return o(x, y);
    }


    static void Main()
    {
        IndraVerma indra = () => Console.WriteLine("Kalaripayetu");
        indra();
        //op o = (x, y) => x + y;
        int res = operation(9, 6, (x, y) => x + y);
        Console.WriteLine(res);

    }
}





using System;
using System.Collections.Generic;
using System.Linq;

class Program
{
    delegate int op(int x, int y);
    static int operation(int x, int y, op o) 
    {
        return o(x, y);
    }


    static void Main()
    {
        Console.WriteLine("Enter a number:");
        int x=Convert.ToInt32(Console.ReadLine());
        Console.WriteLine("Enter another number:");
        int y=Convert.ToInt32(Console.ReadLine());
        op o = (x, y) => x + y;
        Console.WriteLine("Which Operation is required:");
        Console.WriteLine("\n1.Add\n2.Sub\n3.Mul\n4.Div\nEnter Choice:");
        int oper= Convert.ToInt32(Console.ReadLine());
        if (oper == 1) o = (x, y) => x + y;
        else if (oper == 2) o = (x, y) => x - y;
        else if (oper == 3) o = (x, y) => x * y;
        else if (oper == 4) o = (x, y) => y == 0 ? 0 : x / y;
        else Console.WriteLine("Invalid Choice, taking the default Add function.");
        int res = operation(x, y, o);
        Console.WriteLine("The Result is {0}.", res);


    }

    }





// Linq : inner join 
using System;
using System.Linq;
using System.Collections.Generic;
public class Employee
{
    public int emp_id { get; set; }
    public string emp_name { get; set; }
    public string emp_lang { get; set; }
}
public class Department
{
    public int emp_id { get; set; }
    public string emp_dept { get; set; }
    public int emp_salary { get; set; }
}
class Program
{
    static public void Main()
    {
        List<Employee> emps = new List<Employee>() {
            new Employee() {emp_id = 100, emp_name = "Jay", emp_lang = "C#"},
            new Employee() {emp_id = 101, emp_name = "Moni", emp_lang = "C"},
            new Employee() {emp_id = 102, emp_name = "Ishu", emp_lang = "Java"},
            new Employee() {emp_id = 103, emp_name = "Tannu", emp_lang = "Java"},
            new Employee() {emp_id = 104, emp_name = "Susma",emp_lang = "C#"},
            new Employee() {emp_id = 105, emp_name = "Moni", emp_lang = "Java"},
        };
        List<Department> depts = new List<Department>() {
            new Department() {emp_id = 100, emp_dept = "Designing", emp_salary = 43000},
            new Department() {emp_id = 101, emp_dept = "Developer", emp_salary = 41000},
            new Department() {emp_id = 102, emp_dept = "HR", emp_salary = 50000},
            new Department() {emp_id = 103, emp_dept = "Designing", emp_salary = 60000},
        };

        // Query to find the name and the salary of the employees using Join
        var res = from e in emps
                  join d in depts
                      on e.emp_id equals d.emp_id
                  select new
                  {
                      Emp_Name = e.emp_name,
                      Emp_Salary = d.emp_salary
                  };

        Console.WriteLine("Employee and their Salary: ");
        foreach (var val in res)
        {
            Console.WriteLine("Employee Name: {0} Salary: {1}",
                                val.Emp_Name, val.Emp_Salary);
        }
    }
}










