using System;
using System.Linq;
class Program
{
    static void Main(string[] args)
    {
        string x = @"What is Lorem Ipsum? Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum.";
        var y = x.Split(' ');
        var matchQuery = from c in y where c.Equals("Lorem") select c;
        int i = 0;
        foreach (string c in matchQuery)
        {
            Console.WriteLine(c);
            i++;
        }
        Console.WriteLine(i);   
        Console.ReadLine();
    }
}











using System;
using System.Linq;
class Program
{
    static void Main(string[] args)
    {
        string[] flowers = { "dahlia", "rose", "lotus", "lily", "hibiscus", "daffodil" };
        var fQuery =
        from flower in flowers
        where (flower.StartsWith("d"))
        select flower;
        foreach (string f in fQuery)
        {
            Console.WriteLine(f);
        }        
    }
}




using System;
using System.Linq;
class Program
{
    static void Main(string[] args)
    {
        string x = @"What is Lorem Ipsum? Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum.";
        var y = x.Split(' ');
        var matchQuery = from c in y where c.EndsWith('.') select c;
        int i = 0;
        Console.WriteLine("No. of Sentences:");
        foreach (string c in matchQuery)
        {
            Console.WriteLine(c);
            i++;
        }
        Console.WriteLine(i);
        Console.ReadLine();
    }
}






using System;
using System.Collections.Generic;
using System.Linq;

class Flower
{
    public string Name { get; set; }
    public int Petals { get; set; }
}

class Program
{
    static void Main()
    {
        // Create list of flowers
        List<Flower> flowers = new List<Flower>()
        {
            new Flower { Name = "Rose", Petals = 5 },
            new Flower { Name = "Lily", Petals = 6 },
            new Flower { Name = "Lotus", Petals = 4 },
            new Flower { Name = "Dahlia", Petals = 8 },
            new Flower { Name = "Tulip", Petals = 3 }
        };

        // Display complete list
        Console.WriteLine("Complete Flower List:");
        foreach (var flower in flowers)
        {
            Console.WriteLine($"Name: {flower.Name}, Petals: {flower.Petals}");
        }

        Console.WriteLine("\nFiltered & Ordered List (Petals > 4):");

        // LINQ Query
        var result =
            from f in flowers
            where f.Petals > 4
            orderby f.Name
            select f;

        // Display filtered list
        foreach (var flower in result)
        {
            Console.WriteLine($"Name: {flower.Name}, Petals: {flower.Petals}");
        }

        Console.ReadLine();
    }
}







using System;
using System.Collections.Generic;
using System.Linq;

class Flower
{
    public string Name { get; set; }
    public int Petals { get; set; }
}

class Program
{
    static void Main()
    {
        // Create list of flowers
        List<Flower> flowers = new List<Flower>()
        {
            new Flower { Name = "Rose", Petals = 5 },
            new Flower { Name = "Lily", Petals = 5 },
            new Flower { Name = "Lotus", Petals = 4 },
            new Flower { Name = "Dahlia", Petals = 8 },
            new Flower { Name = "Tulip", Petals = 4 }
        };

        // Display complete list
        Console.WriteLine("Complete Flower List:");
        foreach (var flower in flowers)
        {
            Console.WriteLine($"Name: {flower.Name}, Petals: {flower.Petals}");
        }

        //Console.WriteLine("\nFiltered & Ordered List (Petals > 4):");

        // LINQ Query
        var result =
            from f in flowers
            //where f.Petals > 4
            //orderby f.Name
            //select f;
            group f by f.Petals;

        // Display filtered list
        foreach (var flowerset in result)
        {
            Console.WriteLine("For the group with petals : " + flowerset.Key);
            foreach(var flo in flowerset)
                Console.WriteLine($"Name: {flo.Name}, Petals: {flo.Petals}");
        }

        Console.ReadLine();
    }
}




using System;
using System.Collections.Generic;
using System.Linq;

class Flower
{
    public string Name { get; set; }
    public int Petals { get; set; }
}

class Program
{
    static void Main()
    {
        List<Flower> flowers = new List<Flower>()
        {
            new Flower { Name = "Rose", Petals = 5 },
            new Flower { Name = "Lily", Petals = 6 },
            new Flower { Name = "Lotus", Petals = 4 },
            new Flower { Name = "Dahlia", Petals = 8 },
            new Flower { Name = "Tulip", Petals = 4 },
            new Flower { Name = "Jasmine", Petals = 5 }
        };

        var groupedFlowers =
            from f in flowers
            group f by f.Petals;

        foreach (var group in groupedFlowers)
        {
            Console.WriteLine("Petals: " + group.Key);

            foreach (var flower in group)
            {
                Console.WriteLine("   " + flower.Name);
            }

            Console.WriteLine();
        }

        Console.ReadLine();
    }
}





using System;
using System.Collections.Generic;
using System.Linq;

class Flower
{
    public string Name { get; set; }
    public int Petals { get; set; }
}

class Program
{
    static void Main()
    {
        List<Flower> flowers = new List<Flower>()
        {
            new Flower { Name = "Rose", Petals = 5 },
            new Flower { Name = "Lily", Petals = 6 },
            new Flower { Name = "Lotus", Petals = 4 },
            new Flower { Name = "Dahlia", Petals = 8 },
            new Flower { Name = "Tulip", Petals = 4 },
            new Flower { Name = "Jasmine", Petals = 5 }
        };

        Console.WriteLine("Grouped By Petals:\n");

        var groupedFlowers =
            from f in flowers
            group f by f.Petals into g
            orderby g.Key
            select g;

        foreach (var group in groupedFlowers)
        {
            Console.WriteLine("Petals: " + group.Key);

            foreach (var flower in group)
            {
                Console.WriteLine("   " + flower.Name);
            }

            Console.WriteLine();
        }

        Console.ReadLine();
    }
}












